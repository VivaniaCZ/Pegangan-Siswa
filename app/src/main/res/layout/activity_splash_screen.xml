<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SplashScreen">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvSplash"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/logosplashscreensadarpajak"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@id/tvSplash"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:scaleType="centerInside"
            android:layout_margin="15dp"
            android:src="@drawable/logo_tulisan" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tengah"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tvSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tengah"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="#000011"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <ProgressBar
        android:id="@+id/progresBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSplash"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="45dp" />
</RelativeLayout>